{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "github-actions": {
    "enabled": true,
    "pinDigests": true
  },
  "includePaths": [
    "Gemfile",
    "waterdrop.gemspec",
    "spec/integrations/**/Gemfile"
  ],
  "packageRules": [
    {
      "matchDepPatterns": ["*"],
      "minimumReleaseAge": "7 days"
    },
    {
      "matchFileNames": [
        "spec/integrations/**/Gemfile"
      ],
      "groupName": "integration test dependencies",
      "commitMessageTopic": "integration test dependencies"
    }
  ]
}
