{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "includePaths": [
    ".ruby-version",
    "Gemfile",
    "Gemfile.lint",
    "waterdrop.gemspec",
    "spec/integrations/**/Gemfile",
    ".github/workflows/**"
  ],
  "packageRules": [
    {
      "minimumReleaseAge": "7 days",
      "matchDepNames": [
        "/*/"
      ]
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "pinDigests": true
    },
    {
      "matchFileNames": [
        "spec/integrations/**/Gemfile"
      ],
      "groupName": "integration test dependencies",
      "commitMessageTopic": "integration test dependencies"
    },
    {
      "description": "Group ruby/setup-ruby action with ruby version updates",
      "matchPackageNames": [
        "ruby/setup-ruby",
        "ruby"
      ],
      "groupName": "ruby setup"
    }
  ]
}
